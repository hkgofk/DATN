@model ChieuTour.Models.TinTuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết</h2>

<div>
    <h4>Tin tức</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Người đăng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NguoiDung.HoTen)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TieuDe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NoiDung)
        </dt>

        <dd>
            @Html.Raw(Model.NoiDung)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>

        <dd>
            @{
                string ImagePath = "~/wwwroot/images/" + Model.HinhAnh;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-responsive" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayDang)
        </dt>

        <dd>
            @string.Format("{0:dd/MM/yyyy}", Model.NgayDang).ToString()
            @*@Html.DisplayFor(model => model.NgayDang)*@
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaTinTuc }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
</p>
