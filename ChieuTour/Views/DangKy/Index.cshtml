
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<div class="span1"></div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Đăng ký</li>
    </ul>
    <h3> Đăng ký</h3>
    @*<div class="span3"></div>*@
    <div class="row">
        <div class="span2">

        </div>

    <div class="well span6">
        <form class="form-horizontal" method="post" name="dang-ky">
            <h4>Thông tin của bạn</h4>
            <div class="control-group">
                <label class="control-label" for="inputFname1">Họ và tên <sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="HotenKH" placeholder="Nhập họ và tên" /> <span class="alert-error">@ViewData["Loi1"]</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLnam">Tên đăng nhập <sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="TenDN" placeholder="Nhập tên tài khoản" /> <span class="alert-error">@ViewData["Loi2"]</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input_email">Mật khẩu <sup>*</sup></label>
                <div class="controls">
                    <input type="password" name="MatKhau" placeholder="Nhập mật khẩu" /> <span class="alert-error">@ViewData["Loi3"]</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword1">Nhập lại mật khẩu <sup>*</sup></label>
                <div class="controls">
                    <input type="password" name="Matkhaunhaplai" placeholder="Nhập lại mật khẩu" /> <span class="alert-error">@ViewData["Loi4"]</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword1">Địa chỉ <sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="DiaChi" placeholder="Nhập địa chỉ" /> <span class="alert-error">@ViewData["Loi5"]</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword1">Email <sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="Email" placeholder="Nhập email" /> <span class="alert-error">@ViewData["Loi6"]</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword1">Số điện thoại <sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="Dienthoai" placeholder="Nhập số điện thoại" pattern="(84|0[3|5|7|8|9])+([0-9]{8})\b"/> <span class="alert-error">@ViewData["Loi7"]</span>
                </div>
            </div>           
            <div class="control-group">
                <div class="controls">
                    <input class="btn btn-large btn-success" type="submit" value="Đăng ký" />
                </div>
            </div>
        </form>
    </div>
    </div>

</div>

