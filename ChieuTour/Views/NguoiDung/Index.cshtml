
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<div class="span1"></div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Đăng nhập</li>
    </ul>
    <h3> Đăng nhập</h3>
    <hr class="soft" />

    <div class="row">               
        <div class="span10">
            <div class="span1"></div>
            <div class="well span6">
                <h5>ĐĂNG NHẬP VÀO WEBSITE</h5>
                <form method="post" name="dang-nhap">
                    <div class="control-group">
                        <label class="control-label" for="inputEmail1">Tài khoản</label>
                        <div class="controls">
                            <input type="text" name="TenDN" placeholder="Nhập tài khoản" /> <span class="alert-error">@ViewData["Loi1"]</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputPassword1">Mật khẩu</label>
                        <div class="controls">
                            <input type="password" name="Matkhau" placeholder="Nhập mật khẩu" /> <span class="alert-error">@ViewData["Loi2"]</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn">Đăng nhập</button>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            Nếu chưa có tài khoản?
                            <a href="@Url.Action("Index", "DangKy")">Đăng ký</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

