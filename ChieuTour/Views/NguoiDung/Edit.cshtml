@model ChieuTour.Models.NguoiDung
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="span1"></div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Cập nhật thông tin</li>
    </ul>
    <h3> Cập nhật thông tin</h3>
    <hr class="soft" />
    <div class="row">
        <div class="span10">
            <div class="span1"></div>
            <div class="span6 well">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaNguoiDung)
                    @Html.HiddenFor(model => model.TaiKhoan)
                    @Html.HiddenFor(model => model.MatKhau)
                    @Html.HiddenFor(model => model.IdQuyen)

                    <div class="control-group">
                        <label class="control-label">Họ tên</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Địa chỉ</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Email</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Số điện thoại</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Nhập mật khẩu để xác nhận</label>
                        <div class="controls">
                            <input type="password" name="matKhauXacNhan" />
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Hủy bỏ</a>

                        </div>
                    </div>
                </div>
                }

            </div>
        </div>
    </div>

</div>
