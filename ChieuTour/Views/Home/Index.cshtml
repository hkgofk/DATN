    <h4>THỊNH HÀNH </h4>
    <ul class="thumbnails">
        @foreach (var item in ViewBag.top6)
        {
            <li class="span3">
                <div class="thumbnail">
                    <a href="@Url.Action("Detail", "Tour", new { id = item.tour.MaTour })"><img src="~/wwwroot/images/@item.tour.Anh" alt="" /></a>
                    <div class="caption">
                        <h5>@item.tour.TenTour</h5>
                        @if (item.tour.GiamGia != 0)
                        {
                            double giaGiam = 0;
                            giaGiam = (float)item.tour.GiaNL * (1 - ((float)item.tour.GiamGia / 100));
                            <p style="text-decoration-line: line-through">@string.Format("{0:#,#}", item.tour.GiaNL)</p>
                            <p style="color: red; font-size: large; font-weight: bold">@string.Format("{0:#,#}", giaGiam) vnđ</p>

                        }
                        else
                        {
                            <p style="color: red; font-size: large; font-weight: bold">@string.Format("{0:#,#}", item.tour.GiaNL) vnđ</p>
                        }


                        <h4 style="text-align:center"><a class="btn" href="@Url.Action("Detail", "Tour", new { id = item.tour.MaTour })"> <i class="icon-zoom-in"></i></a> <a class="btn" href="@Url.Action("ThemGiohang", "GioHang", new { @maTour = item.tour.MaTour, @strURL = Request.Url.ToString() })">Thêm vào giỏ hàng <i class="icon-shopping-cart"></i></a>
                    </div>
                </div>
            </li>
        }

