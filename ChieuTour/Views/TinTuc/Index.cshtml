@model PagedList.IPagedList<ChieuTour.Models.TinTuc>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Tin tức</li>
    </ul>
    <h3> Tin tức</h3>
    <hr class="soft" />

    @foreach (var item in Model)
    {
        <div class="tab-content">
            <div class="tab-pane active" id="listView">
                <div class="row">
                    <div class="span2">
                        <img src="~/wwwroot/images/@item.HinhAnh" alt="@item.HinhAnh" />
                    </div>
                    <div class="span6">
                        <h3>@item.TieuDe</h3>
                        <hr class="soft" />
                        <a class="btn btn-small pull-right" href="@Url.Action("Detail", "TinTuc", new { @id = item.MaTinTuc })">Chi tiết</a>
                        <br class="clr" />
                    </div>
                </div>
                <hr class="soft" />
            </div>
        </div>
    }

</div>



<div style="float: right">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
